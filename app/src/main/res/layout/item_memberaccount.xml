<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="#F8F7F7">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_13sdp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/img"
            android:id="@+id/T_FullName"
            android:layout_marginStart="@dimen/_15sdp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_MemberVertifcation"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/_5sdp"
            android:textSize="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/bc_member2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_MemberCertification"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:textSize="@dimen/_9sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/bc_member3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/T_MemberStatus"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:textSize="@dimen/_9sdp"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/bc_memberaccount" />

        <ImageView
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:id="@+id/img"
            android:src="@drawable/ic_profile"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</layout>