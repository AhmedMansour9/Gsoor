<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="model"
            type="com.gsoor.data.remote.model.CitiesResponse.Data" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        app:cardCornerRadius="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:text="@string/country"
                android:id="@+id/Role"
                android:layout_marginStart="@dimen/_10sdp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/red"
                android:text="@={model.cityName}"
                android:layout_toEndOf="@+id/Role"
                android:layout_marginStart="@dimen/_10sdp" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/img_delete"
                android:layout_alignParentEnd="true"
                android:src="@drawable/img_delete" />

            <ImageView
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_13sdp"
                android:id="@+id/img_edit"
                android:layout_toStartOf="@+id/img_delete"
                android:src="@drawable/ic_edit" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonaddPermisson"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/img_delete"
                android:layout_marginTop="@dimen/_10sdp"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:text="@string/add_permisson"
                android:backgroundTint="@color/light_green"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/_11sdp"
                app:backgroundTint="@color/white"
                app:cornerRadius="5dp" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>